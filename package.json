  },
  "dependencies": {
    "@opentui/core": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "temporal",
    "tui",
    "terminal",
    "workflow"
  ],
  "license": "MIT"
}
