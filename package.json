{
  "name": "temporal-tui",
  "version": "0.1.0",
  "type": "module",
  "description": "Terminal UI for Temporal workflow orchestration",
  "main": "src/index.ts",
  "scripts": {
    "dev": "DEBUG=true bun run src/index.ts",
    "build": "NODE_ENV=production bun build src/index.ts --outdir dist --target bun",
